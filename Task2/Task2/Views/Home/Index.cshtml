@{
    ViewData["Title"] = "Home Page";
}


<h2>Enter Two Numbers</h2>

@using (Html.BeginForm())
{
    <div class="form-label">
        @Html.Label("Left Number :")
        @Html.TextBox("input1")
    </div>

    <div>
        @Html.Label("Right Number :")
        @Html.TextBox("input2")
    </div>

    <input type="submit" value="Calculate" />
}


    <h3>Result:</h3>
    <p>Result: @ViewBag.Result</p>