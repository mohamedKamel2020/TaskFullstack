@model NopCommerce2.Models.Invoices
<div class="container" style="margin-top:25px;">
	<div class="col-12">
		<form asp-action="SaveCreate">
			<div class="row" style="margin-left:15%;">
				<div class="col-md-4 form-group">
					<input asp-for="@Model.invoiceSell.DateH" class="form-control" placeholder="DataH" />
					<span asp-validation-for="@Model.invoiceSell.DateH" class="text-danger"></span>
				</div>
				<div class="col-md-4 form-group">
					<input asp-for="@Model.invoiceSell.DateG" class="form-control" placeholder="DateG" />
					<span asp-validation-for="@Model.invoiceSell.DateG" class="text-danger"></span>
				</div>
				<div class="col-md-4 form-group">
					<input asp-for="@Model.invoiceSell.InvoiceNo" class="form-control" type="number" placeholder="InvoiceNo" />
				</div>
			</div>
			<div class="row" style="margin-left:15%; margin-top:20px;">
				<div class="col-md-4 form-group">
					<input type="text" asp-for="@Model.invoiceSell.EName" class="form-control" placeholder="EName" />
					<span asp-validation-for="@Model.invoiceSell.EName" class="text-danger"></span>
				</div>
				<div class="col-md-4 form-group">
					<input asp-for="@Model.invoiceSell.MainContact1" class="form-control" type="text" placeholder="MainContact1" />
					<span asp-validation-for="@Model.invoiceSell.MainContact1" class="text-danger"></span>
				</div>
				<div class="col-md-4 form-group">
					<input asp-for="@Model.invoiceSell.AName" class="form-control" type="text" placeholder="AName" />
				</div>
			</div>
			<div class="row" style="margin-left:15%;margin-top:20px;">
				<div class="col-md-4 form-group">
					<input asp-for="@Model.invoiceSell.InvoiceVatid" class="form-control" type="text" placeholder="InvoiceVatid" />

				</div>
				<div class="col-md-4 form-group">
					<input asp-for="@Model.invoiceSell.ClientVendorNo" class="form-control" type="number" placeholder="ClientVendorNo" />
				</div>
			</div>
			<table class="table table-bordered" style="margin-top:50px;width:100%;">
				<thead>
					<tr>
						<td>
							OrderNo
						</td>
						<td>
							ItemNo
						</td>
						<td>
							UnitNo
						</td>
						<td>
							Price
						</td>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<input asp-for="@Model.invoiceSellUnit." placeholder="OrderNo" type="number" />
						</td>
						<td>
							<input asp-for="ItemNo" placeholder="ItemNo" type="number" />
						</td>
						<td>
							<input asp-for="UnitNo" placeholder="UnitNo" type="number" />
						</td>
						<td>
							<input asp-for="Price" placeholder="Price" />
						</td>
					</tr>
				</tbody>
			</table>
			<table class="table table-bordered" style="margin-top:50px;width:100%;">
				<thead>
					<tr>
						<td>
							Quantity
						</td>
						<td>
							Total
						</td>
						<td>
							TotalPlus
						</td>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<input asp-for="Quantity" placeholder="Quntity" />
						</td>
						<td>
							<input asp-for="Total" placeholder="total" />
						</td>
						<td>
							<input asp-for="TotalPlusTax" placeholder="totalPlus" />
						</td>
					</tr>
				</tbody>
			</table>

			<br />
			<div>
				<button class="btn btn-success" type="submit">Save</button>
			</div>
		</form>
	</div>

</div>